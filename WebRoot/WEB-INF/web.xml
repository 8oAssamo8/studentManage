<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>studentManage</display-name>
	<context-param>
		<param-name>drv</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost:3306/student</param-value>
	</context-param>
	<context-param>
		<param-name>usr</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>pwd</param-name>
		<param-value>123456</param-value>
	</context-param>

	<context-param>
		<param-name>domain</param-name>
		<param-value>localhost:8080/studentManage</param-value>
	</context-param>
	<context-param>
		<param-name>emailHost</param-name>
		<param-value>smtp.163.com</param-value>
	</context-param>
	<context-param>
		<param-name>emailUserEmail</param-name>
		<param-value>18813543542@163.com</param-value>
	</context-param>
	<context-param>
		<param-name>emailUserName</param-name>
		<param-value>18813543542</param-value>
	</context-param>
	<context-param>
		<param-name>emailPassword</param-name>
		<param-value>dgut123</param-value>
	</context-param>


	<servlet>
		<description>用户管理</description>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>servlet.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<description>验证码管理</description>
		<servlet-name>ImageCheckCodeServlet</servlet-name>
		<servlet-class>servlet.ImageCheckCodeServlet</servlet-class>
	</servlet>
	<servlet>
		<description>班级管理</description>
		<servlet-name>ClassServlet</servlet-name>
		<servlet-class>servlet.ClassServlet</servlet-class>
	</servlet>
	<servlet>
		<description>课程管理</description>
		<servlet-name>CourseServlet</servlet-name>
		<servlet-class>servlet.CourseServlet</servlet-class>
	</servlet>
	<servlet>
		<description>学生排名</description>
		<servlet-name>RankingServlet</servlet-name>
		<servlet-class>servlet.RankingServlet</servlet-class>
	</servlet>
	<servlet>
		<description>查询成绩</description>
		<servlet-name>ScoreServlet</servlet-name>
		<servlet-class>servlet.ScoreServlet</servlet-class>
	</servlet>
	<servlet>
		<description>初始化系统设置</description>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>servlet.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<description>备份数据库</description>
		<servlet-name>DatabaseServlet</servlet-name>
		<servlet-class>servlet.DatabaseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/servlet/UserServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ClassServlet</servlet-name>
		<url-pattern>/servlet/ClassServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CourseServlet</servlet-name>
		<url-pattern>/servlet/CourseServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RankingServlet</servlet-name>
		<url-pattern>/servlet/RankingServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ScoreServlet</servlet-name>
		<url-pattern>/servlet/ScoreServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>InitServlet</servlet-name>
		<url-pattern>/servlet/InitServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DatabaseServlet</servlet-name>
		<url-pattern>/servlet/DatabaseServlet</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>charencode</filter-name>
		<filter-class>filter.CharEncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>charencode</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>HeadFilter</filter-name>
		<filter-class>filter.HeadFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HeadFilter</filter-name>
		<url-pattern>/user/manageUIMain/*</url-pattern>
		<url-pattern>/index.jsp</url-pattern>
		<url-pattern>/register.jsp</url-pattern>
		<url-pattern>/findPassword.jsp</url-pattern>
		<url-pattern>/newPassword.jsp</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<filter>
		<filter-name>AuthorityFilter</filter-name>
		<filter-class>filter.AuthorityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthorityFilter</filter-name>
		<url-pattern>/user/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>100</session-timeout>
	</session-config>
	<jsp-config>
		<taglib>
			<taglib-uri>/myTagLib</taglib-uri>
			<taglib-location>/WEB-INF/myTagLib.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>